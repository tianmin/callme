<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
   <!-- 使用按钮 -->
   <!-- 按下按钮后 -->
     <item android:state_pressed="true" >
        <shape>
            <!-- 渐变 -->
            <gradient
                android:startColor="#44C068"
                android:endColor="#44C068"
                android:type="radial"
                android:gradientRadius="50" />
            <!-- 描边 -->
            <stroke
                android:width="2dp"
                android:color="#99CC00"
             />
            <!-- 圆角 -->
            <corners
                android:radius="2dp" />
            
            <solid
                android:color="#81CE00"
                />
            
        </shape>
    </item>

    

     <!-- 按钮外形 -->
    <item>       
        <shape>
            <gradient  android:startColor="#44C068"
                       android:endColor="#44C068"
                 
                />
            
            <stroke
                android:width="2dp"
                android:color="#44C068"/>
            <corners 
                android:topRightRadius="2dp"
                android:bottomLeftRadius="2dp"
                android:topLeftRadius="2dp"
                android:bottomRightRadius="2dp"
            />
         
        </shape>
    </item>

</selector>