<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 头部 -->

    <include
        android:id="@+id/contacts_header"
        layout="@layout/title_bar" />

    <!-- 中间内容 -->

    <com.diandian.mycall.contacts.MyListView
        android:id="@+id/contacts_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/contacts_bottom"
        android:layout_below="@+id/contacts_header"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="6dp"
        android:cacheColorHint="#00000000"
        android:divider="@color/blank_color"
        android:dividerHeight="1px" />
</RelativeLayout>