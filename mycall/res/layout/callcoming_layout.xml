<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333" >

    <TextView
        android:id="@+id/calling_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calling_name"
        android:layout_below="@+id/calling_name"
        android:layout_marginTop="14dp"
        android:text="13540774778"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/calling_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="李四"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calling_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/calling_number"
        android:layout_below="@+id/calling_number"
        android:layout_marginTop="20dp"
        android:text="TA的心情标签:"
        android:textColor="#008500"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/calling_tag_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/calling_tag"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/calling_tag"
        android:text="无"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/calling_btn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_below="@+id/calling_tag"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/callcoming"
        android:onClick="callComingBack"
        android:text="来电提醒"
        android:textColor="#ffffff"
        android:textSize="30sp" />

</RelativeLayout>