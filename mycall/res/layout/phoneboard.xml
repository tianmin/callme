<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:singleLine="false"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/keyboard_content_textsize" />

    <LinearLayout
        android:id="@+id/keyboard_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_leftbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_leftbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_leftbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_leftbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="1"
                android:textSize="@dimen/keyboard_textsize_leftbtn"
                android:typeface="monospace" />

            <Button
                android:id="@+id/button2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_centerbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_centerbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_centerbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_centerbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="2"
                android:textSize="@dimen/keyboard_textsize_centerbtn" />

            <Button
                android:id="@+id/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_bottombtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_bottombtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_bottombtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_bottombtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="3"
                android:textSize="@dimen/keyboard_textsize_bottombtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_leftbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_leftbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_leftbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_leftbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="4"
                android:textSize="@dimen/keyboard_textsize_leftbtn" />

            <Button
                android:id="@+id/button5"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_centerbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_centerbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_centerbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_centerbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="5"
                android:textSize="@dimen/keyboard_textsize_centerbtn" />

            <Button
                android:id="@+id/button6"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_bottombtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_bottombtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_bottombtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_bottombtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="6"
                android:textSize="@dimen/keyboard_textsize_bottombtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button7"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_leftbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_leftbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_leftbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_leftbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="7"
                android:textSize="@dimen/keyboard_textsize_leftbtn" />

            <Button
                android:id="@+id/button8"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_centerbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_centerbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_centerbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_centerbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="8"
                android:textSize="@dimen/keyboard_textsize_centerbtn" />

            <Button
                android:id="@+id/button9"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_bottombtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_bottombtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_bottombtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_bottombtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="9"
                android:textSize="@dimen/keyboard_textsize_centerbtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/star"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_leftbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_leftbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_leftbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_leftbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="*"
                android:textSize="@dimen/keyboard_textsize_fuhao" />

            <Button
                android:id="@+id/button0"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_centerbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_centerbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_centerbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_centerbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="0"
                android:textSize="@dimen/keyboard_textsize_centerbtn" />

            <Button
                android:id="@+id/del"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_bottombtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_bottombtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_bottombtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_bottombtn"
                android:layout_weight="1"
                android:background="@drawable/button_del"
                android:text="退格"
                android:textSize="@dimen/keyboard_textsize_bottombtn" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/keyboard_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/shap"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_endbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_leftbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_leftbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_leftbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="#"
                android:textSize="@dimen/keyboard_textsize_fuhao" />

            <Button
                android:id="@+id/plus"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_endbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_centerbtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_centerbtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_centerbtn"
                android:layout_weight="1"
                android:background="@drawable/boardkeys"
                android:text="+"
                android:textSize="@dimen/keyboard_textsize_fuhao" />

            <Button
                android:id="@+id/use"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/keyboard_margin_bottom_endbtn"
                android:layout_marginLeft="@dimen/keyboard_margin_left_bottombtn"
                android:layout_marginRight="@dimen/keyboard_margin_right_bottombtn"
                android:layout_marginTop="@dimen/keyboard_margin_top_bottombtn"
                android:layout_weight="1"
                android:background="@drawable/button_use"
                android:onClick="useClick"
                android:text="使用"
                android:textColor="#000000"
                android:textSize="21sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>